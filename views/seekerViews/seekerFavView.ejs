<%- include('../partials/home_header'); %>
<%- include('../partials/defaultNav'); %>



<div class='container'>
    <div class='jumbotron bg-image p-5 text-center shadow-1-strong rounded mb-5 text-dark' style="background-image: url('/images/oldTennis3.png');">
        <p class='display-4'>The Trainers you love!</p>
        <p class='h2'>This is the list curated by you.  Remember those you vibe with and reconnect.  Life's a party, get in the game!</p>
    </div>
    <div class="container">
        <div class="row">

            <% tList.forEach(function(trainer) { %>
                <p></p>
                <div class="col-sm">
                    <div class="card flex-fill bg-dark text-light border">
                        <p class='h3 px-3 mt-1'><%= trainer.trainerName %></p>
                    </div>
                    <div class="card-body d-flex border">
                        <dl>
                            <dt>Phone: <%= trainer.trainerCellphone %></dt>
                            <dt>Email: <%= trainer.trainerEmail %></dt>
                            <dt>City: <%= trainer.trainerCity %></dt>
                        </dl>
                        <a href="/seeker/favorite/<%= trainer.trainerId %>" class="btn btn-lg">
                            <i class="far fa-address-card fa-3x" style="color:rgb(104, 42, 6)"></i></a>
                    </div>
                  </div>
            <% }); %>

        </div>
    
</div>
<%- include('../partials/home_header'); %>
<%- include('../partials/defaultNav'); %>
<script type="text/javascript" src="/scripts/seekerTrainerSearch.js"></script>


<span type="hidden" id="searchResults" value='<%= JSON.stringify(list) %>'></span>


<div class="container">
    <div class="row align-items-md-stretch">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
            <h1>Search for your perfect trainer, <%= userInfo.user_email %></h1>
        <br/><br/>
        <form method='post' action='search'> 
            <div class="container">
                <div class="row">
                  <div class="col-sm">
<!--marker-->
                    <div class="card flex-fill bg-dark">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Alphabetical.</h5>
                        </div>
                        <div class="card-body d-flex">
                            <dl>
                                <dt>
                                    <div class="input-group mb-1">
                                        <div class="input-group-append">
                                          <span class="btn btn-secondary">Name</span>
                                        </div>
                                        <input type="text" name="alphaName" id="alphaName" class="form-control" placeholder="abcdef...">
                                      </div>
                                </dt>
                                <dt>
                                    <div class="input-group mb-1">
                                        <div class="input-group-append">
                                          <span class="btn btn-secondary">Email</span>
                                        </div>
                                        <input type="text" name="alphaEmail" id="alphaName" class="form-control" placeholder="abcdef...">
                                      </div>
                                </dt>
                            </dl>
                        </div>
                    </div>
<!--marker-->
                  </div>
                  <div class="col-sm">
                    
                    <div class="card flex-fill bg-dark">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Experience.</h5>
                        </div>
                        <div class="card-body d-flex">
                            <dl>
                                <dt>
                                    <div class="input-group mb-1">
                                        <div class="input-group-append">
                                          <span class="btn btn-secondary">Years</span>
                                        </div>
                                        <input type="text" name="expYears" id="expYears" class="form-control" placeholder="1,2,3...">
                                      </div>
                                </dt>
                                <dt>
                                    <input type="submit" class="btn btn-primary"/>
                                </dt>
                            </dl>
                            
                        </div>
                    </div>

                  </div>
                </div>
              </div>
        </form>
    </div>

        <div class="table-responsive mt-4">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name</th>
                  <th>Experience</th>
                  <th>Email</th>
                  <th>Phone</th>
                </tr>
              </thead>
                  <tbody>
                    <% for(let count = 0; count < list.length; count++) { %>
                      <form action='setFavorite' method='post' id='<%= list[count]._id %>'>
                        <tr>
                          <td><a href="/seeker/favorite/<%= list[count]._id %>" class="btn btn-sm">
                            <i class="fas fa-bomb fa-2x" style="color:chartreuse"></i></a></td>
                          <td class="pt-2"><%= list[count].TrainerName %></td>
                          <input type='hidden' name='trainerId' value="<%= list[count]._id %>"/>
                          <td class="pt-2"><%= list[count].trainerYearsOfTraining %></td>
                          <td class="pt-2"><%= list[count].trainerEmail %></td>
                          <td class="pt-2"><%= list[count].trainerCellphone %></td>
                        </tr>
                      </form>
                    <% } %>
                  </tbody>
              </table>
          </div>
    </div>
</div>

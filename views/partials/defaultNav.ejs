<div class="container">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand home_page_title" href="/"><i class="fa-2x fas fa-basketball-ball"></i>Tennis Trainer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!--home-->
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/"><i class="fas fa-home fa-2x"></i>Home</a>
                        </li>
                        <!--about-->
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/about"><i class="fas fa-address-card fa-2x"></i>About</a>
                        </li>

                    </ul>
                    <% if(!userInfo.user_email) { %>
                        <!--login-->
                        <a class="navbar-nav nav-link home_page_login_link" aria-current="page" href="/login">Login</a>
                    <% }else{ %>
                    <!--profile-->
                    <div class="btn-group">
                        <button type="button" class="btn-profile btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="far fa-user fa-lg"></i>
                        </button>
                        <ul class="dropdown-menu user_info">
                            <li><a class="user_email dropdown-item nav-link disabled" href="#">
                                    <i class="far fa-envelope"></i><span style="font-size:10px;color:#aaaaaa">Email</span>
                                    <br>
                                    <%=userInfo.user_email%>
                                </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">My Profile</a></li>
                            <% if(userInfo.user_account_type==='Trainer' || userInfo.user_account_type==='Trainer Seeker'){ %>
                                <li><a id="my_schedule" class="dropdown-item" data-des=<%= userInfo.user_account_type.toLowerCase() %>/schedule>My schedule</a></li>
                            <% }else if(userInfo.user_account_type==='Auditor'){ %>
                                <li><a href=<%= userInfo.user_account_type.toLowerCase() %>/allTrainers id="my_schedule" class="dropdown-item" >View all trainers</a></li>
                            <% } %>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                    <% } %>

                </div>
            </div>
        </nav>

    </div>
</div>

